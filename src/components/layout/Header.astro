---
const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-center h-14">
            <!-- Logo/Nombre -->
            <!-- <div class="flex-shrink-0">
                <a href="/" class="text-xl font-bold text-white hover:text-purple-400 transition-colors duration-300">
                    Ing. Siglo XXI
                </a>
            </div> -->

            <!-- Links de navegaciÃ³n -->
            <div class="flex items-center gap-8">
                <a 
                    href="/" 
                    class:list={[
                        " text-normal font-sans transition-all duration-300 hover:text-purple-400",
                        currentPath === "/" ? "text-purple-400 border-b-2 border-purple-400" : "text-white"
                    ]}
                >
                    Inicio
                </a>
                <a 
                    href="/inventos" 
                    class:list={[
                        " text-normal font-sans transition-all duration-300 hover:text-purple-400",
                        currentPath === "/inventos" ? "text-purple-400 border-b-2 border-purple-400" : "text-white"
                    ]}
                >
                    Inventos
                </a>
                <a 
                    href="/inventores" 
                    class:list={[
                        " text-normal font-sans transition-all duration-300 hover:text-purple-400",
                        currentPath === "/inventores" ? "text-purple-400 border-b-2 border-purple-400" : "text-white"
                    ]}
                >
                    Inventores
                </a>
            </div>
        </div>
    </nav>
</header>

<!-- Espaciador para que el contenido no quede debajo del header fijo -->
