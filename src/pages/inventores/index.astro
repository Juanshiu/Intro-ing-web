---
import Layout from "@/layouts/Layout.astro";
import inventoresData from "@/data/inventores.json";
import {Spotlight} from "@/components/ui/Spotlight";
---
<Layout title="Inventores e Ingenieros del Siglo XXI">
    <div class="min-h-screen w-full bg-black relative">
    <Spotlight client:load/>
    <Spotlight client:load/>
    {/* Vercel Grid */}
    <div
      class="absolute inset-0 opacity-80"
      style={{
        backgroundImage: `
          linear-gradient(rgba(255, 255, 255, 0.1) 1px, transparent 1px),
          linear-gradient(90deg, rgba(255, 255, 255, 0.1) 1px, transparent 1px)
        `,
        backgroundSize: "60px 60px",
      }}
    />
    <main class="min-h-screen text-white pt-20 md:pt-24">
        
        <!-- Hero Section -->
        <section class="relative py-20 overflow-hidden">
            <div class="relative max-w-7xl mx-auto px-8 text-center">
                <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">
                    Mentes Brillantes de la Ingeniería
                </h1>
                <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto">
                    Conoce a los ingenieros visionarios que han transformado nuestro mundo con sus innovaciones tecnológicas y científicas
                </p>
            </div>
        </section>

        <!-- Grid de Inventores -->
        <section class="max-w-7xl mx-auto px-8 py-16">
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {inventoresData.map((inventor, index) => (
                    <a 
                        href={`/inventores/${inventor.slug}`}
                        class="group relative bg-gradient-to-br from-gray-900/50 to-gray-800/50 rounded-xl overflow-hidden border border-gray-700/50 hover:border-blue-500/50 transition-all duration-300 hover:shadow-2xl hover:shadow-blue-500/20 hover:-translate-y-2"
                    >
                        <!-- Imagen del Inventor -->
                        <div class="relative h-80 overflow-hidden">
                            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent z-10"></div>
                            <img 
                                src={inventor.photo} 
                                alt={inventor.name}
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                            />
                            <div class="absolute top-4 right-4 z-20">
                                <span class="px-3 py-1 bg-blue-600/80 backdrop-blur-sm rounded-full text-xs font-semibold">
                                    {inventor.nationality}
                                </span>
                            </div>
                        </div>

                        <!-- Información -->
                        <div class="p-6 space-y-3">
                            <h3 class="text-2xl font-bold text-white group-hover:text-blue-400 transition-colors">
                                {inventor.name}
                            </h3>
                            <p class="text-sm text-gray-400">
                                {inventor.birthYear} - {inventor.deathYear}
                            </p>
                            <p class="text-blue-400 text-sm font-semibold">
                                {inventor.field}
                            </p>
                            <p class="text-gray-300 text-sm line-clamp-3">
                                {inventor.biography}
                            </p>
                            
                            <!-- Botón -->
                            <div class="pt-4">
                                <span class="inline-flex items-center gap-2 text-blue-400 font-semibold group-hover:gap-3 transition-all">
                                    <span>Ver Biografía</span>
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                                    </svg>
                                </span>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        </section>
    </main>
  </div>
    
</Layout>

<style>
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>